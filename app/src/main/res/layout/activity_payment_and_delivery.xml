<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3DD">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#A8C39C">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment_Delivery"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp" />
    </RelativeLayout>










    <LinearLayout
        android:id="@+id/mapSection"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/header"
        android:layout_margin="30dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="30dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Delivery Location"
            android:textColor="#2E4A27"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentMethodBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapSection"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Payment Method"
            android:textColor="#2E4A27"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Radio Buttons -->
        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/stripePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Stripe Payment"
                android:textColor="#2E4A27" />

            <RadioButton
                android:id="@+id/cashOnDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on delivery"
                android:textColor="#2E4A27" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/confirmPaymentMethodBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentMethodBox"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="#2E4A27"
        android:paddingVertical="12dp"
        android:text="Confirm payment method"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>
