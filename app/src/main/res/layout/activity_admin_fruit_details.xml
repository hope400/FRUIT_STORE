<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3DD"
    android:padding="24dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#96B48C"
        android:padding="16dp">

        <TextView
            android:id="@+id/detailsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textSize="32sp"
            android:textColor="#2E4A27"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E4A27"
            android:layout_centerInParent="true" />
    </RelativeLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/detailsImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/detailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Name:"
            android:layout_marginTop="20dp"
            android:textColor="#2E4A27"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/detailsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:layout_marginTop="8dp"
            android:textColor="#2E4A27"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/detailsStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount in stock:"
            android:layout_marginTop="8dp"
            android:textColor="#2E4A27"
            android:textSize="16sp"/>

    </LinearLayout>



    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save changes"
        android:textColor="@color/white"
        android:backgroundTint="#325E2D"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
