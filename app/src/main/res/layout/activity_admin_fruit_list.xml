<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3DD">


    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#96B48C"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <!-- Title centered -->
        <TextView
            android:id="@+id/ordersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textSize="24sp"
            android:textColor="#2E4A27"
            android:textStyle="bold"
            android:layout_centerInParent="true" />


        <TextView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"

            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E4A27"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>




    <ScrollView

        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        >

        <LinearLayout
            android:id="@+id/fruitListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="80dp">
        </LinearLayout>
    </ScrollView>


    <!-- ADD FRUIT BUTTON -->
    <Button
        android:id="@+id/btnAddFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Fruit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#325E2D"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

</RelativeLayout>
